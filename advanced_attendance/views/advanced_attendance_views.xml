<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_advanced_attendance_tree" model="ir.ui.view">
            <field name="name">advanced.attendance.tree</field>
            <field name="model">advanced.attendance</field>
            <field name="arch" type="xml">
                <tree string="Advanced Attendances">
                    <field name="name" string="Reference"/>
                    <field name="date_start" string="Period Start"/>
                    <field name="date_end" string="Period End"/>
<!--                    <field name="check_in_time" string="Check In"/>-->
<!--                    <field name="check_out_time" string="Check Out"/>-->
                    <field name="state" widget="badge"/>
                    <field name="created_attendance_count" string="Attendances"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_advanced_attendance_form" model="ir.ui.view">
            <field name="name">advanced.attendance.form</field>
            <field name="model">advanced.attendance</field>
            <field name="arch" type="xml">
                <form string="Advanced Attendance">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" invisible=" [('state', '!=', 'draft')]"/>
                        <button name="action_generate_attendances" string="Generate Attendances" type="object" class="btn-primary" invisible=" [('state', '!=', 'confirmed')]"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" class="btn-secondary" invisible=" [('state', 'not in', ['confirmed', 'done', 'cancel'])]"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" invisible=" [('state', 'not in', ['draft', 'confirmed'])]"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Reference" readonly="1" invisible=" [('name', '=', 'New')]"/>
                                <field name="date_start" required="1"/>
                                <field name="date_end" required="1"/>
                                <field name="company_id" invisible="1"/>

                            </group>
                            <group>
<!--                                <field name="check_in_time" required="1"/>-->
<!--                                <field name="check_out_time" required="1"/>-->
                                <field name="created_attendance_count" widget="statinfo" string="Created Attendances"
                                 invisible=" [('state', '!=', 'done')]"
                                       options="{'clickable': true}"/>
                            </group>
                        </group>

                        <group string="Employees">
                            <field name="employee_ids" widget="many2many_tags"
                                   domain="[('company_id', 'in', [company_id, False])]"
                                   context="{'default_company_id': company_id}"/>
                        </group>

                        <group string="Notes">
                            <field name="note" placeholder="Add internal notes here..." nolabel="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_advanced_attendance_search" model="ir.ui.view">
            <field name="name">advanced.attendance.search</field>
            <field name="model">advanced.attendance</field>
            <field name="arch" type="xml">
                <search string="Search Advanced Attendance">
                    <field name="name" string="Reference"/>
                    <field name="employee_ids" string="Employee"/>
                    <field name="state" string="Status"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="Employee" name="group_by_employee" context="{'group_by': 'employee_ids'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_advanced_attendance" model="ir.actions.act_window">
            <field name="name">Advanced Attendances</field>
            <field name="res_model">advanced.attendance</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_advanced_attendance_tree"/>
            <field name="search_view_id" ref="view_advanced_attendance_search"/>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first advanced attendance record!
                </p>
                <p>
                    This feature allows you to create check-in and check-out records for multiple employees for specific periods.
                </p>
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_advanced_attendance_root"
                  name="Advanced Attendance"
                  parent="hr_attendance.menu_hr_attendance_root"
                  sequence="10"
                  action="action_advanced_attendance"/>

        <menuitem id="menu_advanced_attendance"
                  name="Advanced Attendances"
                  parent="menu_advanced_attendance_root"
                  action="action_advanced_attendance"
                  sequence="10"/>
    </data>
</odoo>
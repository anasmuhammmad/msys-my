<odoo>
    <record id="view_picking_form_inherited" model="ir.ui.view">
        <field name="name">stock.picking.form.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="journal_entry_id" readonly="1"/>
                <button name="action_open_journal_entry" type="object"
                        string="Open Journal Entry" class="oe_highlight"
                        modifiers="{'invisible': [('journal_entry_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
